<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_screen">
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/maintitleheight"
        android:id="@+id/feedbackstitle"
        android:background="@drawable/top" >
		<ImageView
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/feedback_back"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_margin="10dip"
			android:src="@drawable/back"
		    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback_title"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical" >
		<TextView
	        android:id="@+id/feedback_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_gravity="right"
            android:text="500/500"
            android:paddingRight="10dip"
	    />
        <EditText
            android:id="@+id/feedback_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:textStyle="italic"
            android:hint="@string/feedback_edittext_hint"
            android:background="@drawable/bg_white_round"
            android:gravity="top" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
         <Button
                android:id="@+id/feedback_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/btn_dialog_color_selector"
                android:text="提交" />

            <Button
                android:id="@+id/feedback_cancel"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/btn_dialog_color_selector"
                android:text="取消" />
        
    </LinearLayout> 
</LinearLayout>
